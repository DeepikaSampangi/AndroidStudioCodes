<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.deepika.sampangi.g_me.Shopping"
    tools:showIn="@layout/activity_shopping"
    android:background="@drawable/shopbg">
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <AbsoluteLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="places around you"
        android:id="@+id/hangs"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="145dp"
        android:layout_x="82dp"
        android:layout_y="99dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SHOP FOR YOUR FAVOURITE THINGS"
        android:gravity="center"
        android:id="@+id/textView15"
        android:layout_alignParentTop="true"
        android:layout_marginTop="53dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#A65C31"
        android:layout_x="-5dp"
        android:layout_y="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="SHOP ONLINE"
        android:id="@+id/textView16"
        android:textColor="#000000"
        android:gravity="center"
        android:background="#A65C31"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_x="4dp"
        android:layout_y="170dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sd"
        android:src="@drawable/sd"
        android:onClick="sd"
        android:layout_below="@+id/textView16"
        android:layout_toLeftOf="@+id/textView16"
        android:layout_toStartOf="@+id/textView16"
        android:layout_x="47dp"
        android:layout_y="362dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fk"
        android:src="@drawable/fk"
        android:onClick="fk"
        android:layout_alignTop="@+id/sd"
        android:layout_toRightOf="@+id/textView16"
        android:layout_toEndOf="@+id/textView16"
        android:layout_x="210dp"
        android:layout_y="362dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/jb"
        android:layout_marginTop="47dp"
        android:src="@drawable/jb"
        android:onClick="jb"
        android:layout_below="@+id/fk"
        android:layout_alignLeft="@+id/sd"
        android:layout_alignStart="@+id/sd"
        android:layout_x="210dp"
        android:layout_y="250dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/az"
        android:onClick="az"
        android:src="@drawable/az"
        android:layout_alignTop="@+id/jb"
        android:layout_alignRight="@+id/fk"
        android:layout_alignEnd="@+id/fk"
        android:layout_x="47dp"
        android:layout_y="250dp" />



    </AbsoluteLayout>
</ScrollView>

</RelativeLayout>
