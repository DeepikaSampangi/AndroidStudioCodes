<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.deepika.sampangi.g_me.angryclass"
    android:background="#fb9a9a"
    >


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView4"
        android:fillViewport="false">



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">





            <ImageButton
                android:layout_width="308dp"
                android:layout_height="131dp"
                android:id="@+id/helpme1"
                android:src="@drawable/advice"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/angryfbtn"
                android:layout_toEndOf="@+id/angryfbtn"
                android:background="#ddaaaa" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="CHANGE YOUR MOOD"
                android:id="@+id/textView48"
                android:textColor="#000000" />

            <ImageButton
                android:layout_width="354dp"
                android:layout_height="150dp"
                android:id="@+id/ahangoutbtn"
                android:src="@drawable/landmark"
                android:layout_alignTop="@+id/angryfbtn"
                android:layout_toRightOf="@+id/angryfbtn"
                android:layout_toEndOf="@+id/angryfbtn"
                android:layout_row="0"
                android:layout_column="2"
                android:background="#ddaaaa" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="HANG OUT"
                android:id="@+id/textView49"
                android:textColor="#000000" />

            <ImageButton
                android:layout_width="348dp"
                android:layout_height="156dp"
                android:id="@+id/calmbtn"
                android:src="@drawable/calming"



                android:background="#ddaaaa"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="CALM DOWN"
                android:id="@+id/textView50"
                android:textColor="#000000" />

            <ImageButton
                android:layout_width="314dp"
                android:layout_height="132dp"
                android:id="@+id/angryfbtn"
                android:src="@drawable/whoami"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"

                android:background="#ddaaaa"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="KNOW FACTS"
                android:gravity="center"
                android:id="@+id/textView51"
                android:textColor="#000000" />

            <ImageButton
                android:layout_width="316dp"
                android:layout_height="140dp"
                android:id="@+id/am"
                android:src="@drawable/headset"

                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"

                android:background="#ddaaaa"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="LISTEN TO MUSIC"
                android:id="@+id/textView52"
                android:textColor="#000000" />

        </TableLayout>

    </ScrollView>


</RelativeLayout>
